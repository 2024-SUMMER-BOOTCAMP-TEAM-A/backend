  "paths": {
    "/cache": {
      "get": {
        "tags": ["test"],
        "description": "",
        "responses": {
          "200": {
            "description": "성공"
          },
          "500": {
            "description": "내부 서버 오류"
          }
        }
      }
    },
    "/api/v1/persons/": {
      "get": {
        "tags": ["person"],
        "description": "Retrieve a list of all persons.",
        "responses": {
          "200": {
            "description": "성공"
          },
          "500": {
            "description": "내부 서버 오류"
          }
        }
      }
    },
    "/api/v1/persons/{id}": {
      "get": {
        "tags": ["person"],
        "description": "Retrieve details of a person by their ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "성공"
          },
          "404": {
            "description": "찾을 수 없음"
          },
          "500": {
            "description": "내부 서버 오류"
          }
        }
      }
    },
    "/api/v1/users/signup": {
      "post": {
        "tags": ["user"],
        "description": "This endpoint allows you to create a new user by signing up.",
        "parameters": [
          {
           "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "example@example.com"
                },
                "password": {
                  "type": "string",
                  "example": "password123"
                },
                "nickname": {
                  "type": "string",
                  "example": "PersonA"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "작성됨"
          },
          "400": {
            "description": "잘못된 요청"
          },
          "500": {
            "description": "내부 서버 오류"
          }
        }
      }
    },
    "/api/v1/users/login": {
      "post": {
        "tags": ["user"],
        "description": "This endpoint allows a user to log in.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "example@example.com"
                },
                "password": {
                  "type": "string",
                  "example": "password123"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "성공"
          },
          "400": {
            "description": "잘못된 요청"
          },
          "401": {
            "description": "인증 실패"
          },
          "500": {
            "description": "내부 서버 오류"
          }
        }
      }
